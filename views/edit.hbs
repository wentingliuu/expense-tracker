<form action="/records/{{ record._id }}?_method=PUT" method="POST" class="container rounded mt-5 py-2">
  <div class="row align-items-center m-2 py-3">
    <h6 class="col-4 text-warning">*必填欄位</h6>
    <h2 class="col-8 text-light">請修改你的支出</h2>
  </div>
  <div class="row form-group align-items-center m-2 mr-3 py-3">
    <label class="col-4 h4 text-light" for="name">名稱<span class="text-warning"> *</span></label>
    <input type="text" class="form-control col-8" name="name" id="name" maxlength="8" placeholder="請輸入欲修改的項目名稱" value="{{record.name}}" required />
  </div>
  <div class="row form-group align-items-center m-2 mr-3 py-3">
    <label class="col-4 h4 text-light" for="date">日期<span class="text-warning"> *</span></label>
    <input type="date" class="form-control col-8" name="date" id="date" min="2020-01-01" max="2025-12-31" value="{{isoDateFormat record.date}}" required />
  </div>
  <div class="row form-group align-items-center m-2 mr-3 py-3">
    <label class="col-4 h4 text-light" for="category">類別<span class="text-warning"> *</span></label>
    <select id="category" name="category" class="form-control col-8" required>
      <option value="家居物業" {{{isSelected "家居物業" categoryName}}}>家居物業</option>
      <option value="交通出行" {{{isSelected "交通出行" categoryName}}}>交通出行</option>
      <option value="休閒娛樂" {{{isSelected "休閒娛樂" categoryName}}}>休閒娛樂</option>
      <option value="餐飲食品" {{{isSelected "餐飲食品" categoryName}}}>餐飲食品</option>
      <option value="其他" {{{isSelected "其他" categoryName}}}>其他</option>
    </select>
  </div>
  <div class="row form-group align-items-center m-2 mr-3 py-3">
    <label class="col-4 h4 text-light" for="amount">金額<span class="text-warning"> *</span></label>
    <input type="number" class="form-control col-8" name="amount" id="amount" min="1" max="99999" placeholder="請輸入欲修改的花費金額" value="{{record.amount}}" required />
  </div>
  <div class="row justify-content-center">
    <button type="submit" class="btn btn-warning my-4 col-4">送出</button>
  </div>
</form>