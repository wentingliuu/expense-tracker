<section class="container rounded mt-5 py-2">
  <div class="row align-items-center m-2 py-3">
    <h6 class="col-4 text-warning">*必填欄位</h6>
    <h2 class="col-8 text-light">立即登入</h2>
  </div>
  {{> message}}
  <form action="/users/login" method="POST">
    <div class="row form-group align-items-center m-2 mr-3 py-3">
      <label class="col-4 h4 text-light" for="email">信箱<span class="text-warning"> *</span></label>
      <input type="email" class="form-control col-8" id="email" name="email" placeholder="Enter email" required />
    </div>
    <div class="row form-group align-items-center m-2 mr-3 py-3">
      <label class="col-4 h4 text-light" for="password">密碼<span class="text-warning"> *</span></label>
      <input type="password" class="form-control col-8" id="password" name="password" placeholder="Enter password" required />
    </div>
    <div class="row justify-content-around mx-3">
      <button type="submit" class="btn btn-info my-4 col-4">信箱登入</button>
      <a type="button" href="/auth/facebook" class="btn btn-primary my-4 text-center col-4"><i class="fab fa-facebook fa-lg mr-2"></i> 快速登入</a>
    </div>
  </form>
  <p class="text-light ml-4">
    還沒有帳號嗎？ <a href="/users/register" class="text-info">註冊</a>
  </p>
</section>